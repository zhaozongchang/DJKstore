<div class="col-md-12">

<h2 style="text-align:center;">我的收藏</h2>

<hr>

<table class="table table-striped">
  <thead>
    <tr>
      <td>名称</td>
      <td>价格</td>
      <td>描述</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= link_to(product.title, product_path(product))%></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= product.quantity %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
